<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:lexmain='urn:import:org.palaso.languageforge.client.lex.controls.view'>
	<g:HTMLPanel width="100%" height="100%" styleName="lex_example_panel">
		<g:HTMLPanel width="100%" height="100%" ui:field="examplePanel">
			<div class="lex-dc-row">
				<div id="firefox-bug-fix">
					<div class="lex-dc-column" id="c1">
						<g:Label ui:field="exampleLabel" text="Example_Label"
							horizontalAlignment="ALIGN_RIGHT"></g:Label>
					</div>
					<div class="lex-dc-column" id="c2">
						<lexmain:MultiTextView  styleName= "example_view_examplepanel_multitext"
							ui:field="mutTxtExample"></lexmain:MultiTextView>
					</div>
					<div class="lex-dc-column" id="c3-40PIX">
						<b:Button  type="DANGER"  icon="REMOVE"
							width="10px" height="20px" ui:field="btnRemoveExample">
						</b:Button>
					</div>
				</div>
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel width="100%" height="100%" ui:field="translationPanel">
			<div class="lex-dc-row">
				<div id="firefox-bug-fix">
					<div class="lex-dc-column" id="c1">
						<g:Label ui:field="translationLabel" text="Translation_Label"
							horizontalAlignment="ALIGN_RIGHT"></g:Label>
					</div>
					<div class="lex-dc-column" id="c2">
						<lexmain:MultiTextView styleName= "example_view_examplepanel_multitext"
							ui:field="mutTxtTranslation"></lexmain:MultiTextView>
					</div>
					<div class="lex-dc-column" id="c3-40PIX">
					</div>
				</div>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 