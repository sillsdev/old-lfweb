<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel width="100%" height="100%">
		<g:FlowPanel width="100%" height="100%">
			<g:TabLayoutPanel width="100%" height="100%"
				ui:field="tabPanel" barUnit="PX" barHeight="40">
				<g:tab ui:field="bowserTab">
					<g:header>
						Bowser
					</g:header>
						<g:FlowPanel width="auto" height="auto" ui:field="bowserPanel"
							styleName="content content-block-tab content_inner">
							<g:Frame ui:field='entryDisplayPanel' width="100%"
								height="100px" styleName="bowser_edit_entry_display_panel">
							</g:Frame>
							<g:SimplePanel ui:field='buttonControl' visible="true" />
							<g:ScrollPanel width="100%"
								styleName="lexbrowse-Edit-View-Scrool-Panel">
								<g:SimplePanel ui:field='panel' styleName="lexwordeditPanel" />
							</g:ScrollPanel>
						</g:FlowPanel>
				</g:tab>
				<g:tab ui:field="commentTab">
					<g:header>
						Comments
					</g:header>
					<g:FlowPanel width="auto" height="auto" ui:field="commentPanel"
						styleName="content content-block-tab">
							<g:Frame ui:field='commentsPanel' width="100%"
								height="100%" styleName="bowser_edit_entry_display_panel">
							</g:Frame>
					</g:FlowPanel>
				</g:tab>
			</g:TabLayoutPanel>

		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 